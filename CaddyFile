{
	auto_https disable_redirects
}

wss://localhost, ws://localhost, http://localhost, https://localhost {
    root * /usr/src/app/build/
    file_server

    handle_path /api/* {
    	rewrite * {path}
    	reverse_proxy 127.0.0.1:3000
    }
    handle_path /w* {
        reverse_proxy 127.0.0.1:3000
    }
}
